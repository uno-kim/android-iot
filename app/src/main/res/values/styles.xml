<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->


        <item name="colorSecondary">@android:color/holo_green_light</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">#334422</item>
        <!--<item name="android:statusBarColor">#d2dbe0</item>-->


    </style>

    <style name="AppTheme.Reply" parent="AppTheme">
        <item name="colorPrimary">@color/blueGray700</item>
        <item name="colorPrimaryDark">@color/blueGray100</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:colorBackground">@color/blueGray50</item>
        <item name="colorSurface">@color/white</item>

        <item name="android:navigationBarColor">@color/blueGray700</item>
    </style>


    <style name="cardTextTitle" parent="@style/Subtitle2">
        <item name="android:textSize">8sp</item>
    </style>
    <style name="cardTextDescription" parent="@style/Body2">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="cardButton" parent="@style/Button">
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@color/gray400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">7sp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/worksans_light</item>
        <item name="android:textSize">96sp</item>
    </style>
    <style name="Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">60sp</item>
    </style>
    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/worksans_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/worksans_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/worksans_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/worksans_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
